{
  "name": "MetaCPAN redirect",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Redirect search.cpan.org to MetaCPAN",
	"icons": { "16": "mc.png",
           "48": "metacpan.png",
					"128": "metacpan.png"	},
	"content_scripts": [
			{
				"matches": ["http://search.cpan.org/*"],
				"js": ["mc.js"]
			}
		],
  "permissions": [
    "http://search.cpan.org/"
  ]
}
